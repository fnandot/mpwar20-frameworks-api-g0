{% extends 'base.html.twig' %}

{% set role = app.user.roles|last|u.replaceMatches('/role_/', '').lower %}

{% block body %}
    <nav class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0">
        <a class="navbar-brand col-sm-3 col-md-2 mr-0" href="#">
            <img src="{{ asset('dist/images/logo.png') }}" class="logo" alt="{{ app_vendor_name }}">{{ app_name }}
        </a>

        <span class="navbar-text">
        <span class="badge badge-primary">{{ role }}</span>
        <a href="{{ url('user_web_profile') }}">{{ app.user.email }}</a>
    </span>
        <span class="navbar-text">
        <a class="nav-link" href="{{ url('user_web_logout') }}"><i
                    class="fas fa-sign-out-alt"></i> {{ 'button.sign_out'|trans }}</a>
    </span>
    </nav>

    <div class="container-fluid">
        <div class="row">
            {% include 'core/_nav.html.twig' %}
            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
                    <h1 class="h2 page-header">{% block page_header %}{% endblock %}</h1>
                </div>
                {% block page_body %}{% endblock %}
            </main>
        </div>
    </div>
{% endblock %}
